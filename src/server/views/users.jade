extends ./shared/layout
block contents
    if(users.length < 0)
        span there is no user
    else
        table(class='table table-striped table-hover')
            thead
                tr
                    th first name
                    th last name
                    th email
            tbody
                each item in users
                    tr
                        td=item.first_name
                        td=item.last_name
                        td=item.email
