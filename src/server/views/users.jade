extends ./shared/layout
block contents
    if(users.length < 0)
        span there is no user
    else
        table(class='table table-striped table-hover')
            thead
                tr
                    th first name
                    th last name
                    th email
                    th activation
                    th creation Date
                    th modification Date
            tbody
                each item in users
                    tr
                        td=item.profile.first_name
                        td=item.profile.last_name
                        td=item.email
                        th=item.isActive
                        th #{moment(item.createdAt).format('MM/DD/YYYY')}
                        th #{moment(item.modifiedAt).format('MM/DD/YYYY')}
