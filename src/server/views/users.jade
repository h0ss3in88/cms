extends ./shared/layout
block contents
    if(users.length < 0)
        span there is no user
    else
        table.table.table-striped.table-hover.table-condensed
            thead
                tr
                    th first name
                    th last name
                    th email
                    th activation
                    th creation Date
                    th modification Date
            tbody
                each item in users
                    tr
                        td=item.profile.first_name
                        td=item.profile.last_name
                        td=item.email
                        th=item.isActive
                        th #{moment(item.createdAt).format('MMMM Do YYYY, h:mm:ss a')}
                        th #{moment(item.modifiedAt).format('MMMM Do YYYY, h:mm:ss a')}
